<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= name %> â€” Species</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">
  <%- include('partials/navbar') %>

  <main class="flex-grow-1">
    <div class="container my-5">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/catalog">Catalog</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= name %></li>
        </ol>
      </nav>

      <div class="row">
        <div class="col-12 col-md-6 mb-4 mb-md-0">
          <div class="card shadow-lg border-0">
            <img src="<%= image %>" class="card-img-top" alt="<%= name %>" style="height: 500px; object-fit: cover;">
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="card shadow-lg border-0 h-100">
            <div class="card-body">
              <h1 class="card-title template-text text-black mb-2"><%= name %></h1>
              <% if (scientificName) { %>
                <p class="text-muted fst-italic fs-5 mb-4"><i class="bi bi-book me-2"></i><%= scientificName %></p>
              <% } %>

              <% if (status) { 
                let badgeClass = 'bg-secondary';
                const statusLower = status.toLowerCase();
                if (statusLower.includes('critically')) badgeClass = 'bg-danger';
                else if (statusLower.includes('endangered')) badgeClass = 'bg-warning text-dark';
                else if (statusLower.includes('vulnerable')) badgeClass = 'bg-info';
                else if (statusLower.includes('near threatened')) badgeClass = 'bg-secondary';
                else if (statusLower.includes('least concern')) badgeClass = 'bg-success';
              %>
                <div class="mb-4">
                  <span class="badge <%= badgeClass %> fs-6 px-3 py-2">
                    <i class="bi bi-shield-check me-2"></i><%= status %>
                  </span>
                </div>
              <% } %>

              <% if (description) { %>
                <div class="mb-4">
                  <h5 class="border-bottom pb-2"><i class="bi bi-info-circle me-2"></i>Description</h5>
                  <p class="text-muted"><%= description %></p>
                </div>
              <% } %>

              <div class="mb-4">
                <h5 class="border-bottom pb-2"><i class="bi bi-list-ul me-2"></i>Species Information</h5>
                <ul class="list-group list-group-flush">
                  <% if (region) { %>
                  <li class="list-group-item list-template d-flex align-items-start">
                    <i class="bi bi-geo-alt-fill me-2 text-primary mt-1"></i>
                    <div><strong>Region:</strong> <%= region %></div>
                  </li>
                  <% } %>
                  <% if (habitat) { %>
                  <li class="list-group-item list-template d-flex align-items-start">
                    <i class="bi bi-tree-fill me-2 text-success mt-1"></i>
                    <div><strong>Habitat:</strong> <%= habitat %></div>
                  </li>
                  <% } %>
                  <% if (threats) { %>
                  <li class="list-group-item list-template d-flex align-items-start">
                    <i class="bi bi-exclamation-triangle-fill me-2 text-danger mt-1"></i>
                    <div><strong>Threats:</strong> <%= threats %></div>
                  </li>
                  <% } %>
                </ul>
              </div>

              <div class="d-flex gap-2 flex-wrap">
                <a href="/catalog" class="btn btn-primary">
                  <i class="bi bi-arrow-left me-2"></i>Back to Catalog
                </a>
                <a href="/" class="btn btn-outline-secondary">
                  <i class="bi bi-house-fill me-2"></i>Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
