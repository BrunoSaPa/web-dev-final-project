<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catalog</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <h2 class="text-center mb-4 catalog-text">Species Catalog</h2>

    <div class="text-center mb-4">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-secondary">Mammals</button>
        <button type="button" class="btn btn-secondary">Birds</button>
        <button type="button" class="btn btn-secondary">Reptiles</button>
      </div>
    </div>

    <div class="row">
      <% if (typeof species !== 'undefined' && species && species.length > 0) { %>
        <% species.forEach(function(s) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
              <img src="<%= s.image %>" class="card-img-top" alt="<%= s.commonName %>">
              <div class="card-body">
                <h5 class="card-title"><%= s.commonName %></h5>
                <p class="card-text">Status: <%= s.statusLabel %></p>
                <p class="card-text">SCI Name: <%= s.scientificName %></p>
                <a href="/especie/<%= encodeURIComponent(s.scientificName) %>" class="btn btn-primary">See more</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
    
    <!-- Pagination controls -->
    <% if (typeof pagination !== 'undefined') { %>
      <div class="d-flex justify-content-center my-4">
        <% const prevPage = pagination.page - 1; %>
        <% const nextPage = pagination.page + 1; %>
        <% const limitSuffix = (pagination.limit && parseInt(pagination.limit) !== 15) ? `?limit=${parseInt(pagination.limit)}` : '' %>
        <div class="btn-group" role="group">
          <a class="btn btn-outline-primary <%= pagination.page <= 1 ? 'disabled' : '' %>" href="/catalog/page/<%= Math.max(1, prevPage) %><%= limitSuffix %>">Previous</a>
          <button type="button" class="btn btn-light" disabled>Page <%= pagination.page %> of <%= pagination.totalPages %></button>
          <a class="btn btn-outline-primary <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>" href="/catalog/page/<%= Math.min(pagination.totalPages, nextPage) %><%= limitSuffix %>">Next</a>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
