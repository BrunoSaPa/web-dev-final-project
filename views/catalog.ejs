<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catalog</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <h2 class="text-center mb-4 catalog-text">Species Catalog</h2>

    <!-- Filter Buttons -->
    <div class="text-center mb-4">
      <h5 class="mb-3">Filter by Conservation Status:</h5>
      <div class="btn-group flex-wrap justify-content-center gap-2" role="group">
        <a href="/catalog?status=" class="btn <%= currentFilter === 'all' ? 'btn-primary' : 'btn-outline-secondary' %>">All Species</a>
        <a href="/catalog?status=Critically Endangered" class="btn <%= currentFilter === 'Critically Endangered' ? 'btn-primary' : 'btn-outline-secondary' %>">Critically Endangered</a>
        <a href="/catalog?status=Endangered" class="btn <%= currentFilter === 'Endangered' ? 'btn-primary' : 'btn-outline-secondary' %>">Endangered</a>
        <a href="/catalog?status=Vulnerable" class="btn <%= currentFilter === 'Vulnerable' ? 'btn-primary' : 'btn-outline-secondary' %>">Vulnerable</a>
        <a href="/catalog?status=Near Threatened" class="btn <%= currentFilter === 'Near Threatened' ? 'btn-primary' : 'btn-outline-secondary' %>">Near Threatened</a>
        <a href="/catalog?status=Least Concern" class="btn <%= currentFilter === 'Least Concern' ? 'btn-primary' : 'btn-outline-secondary' %>">Least Concern</a>
      </div>
    </div>

    <% if (currentFilter && currentFilter !== 'all') { %>
      <div class="alert alert-info text-center">
        Showing species with status: <strong><%= currentFilter %></strong>
      </div>
    <% } %>

    <div class="row">
      <% if (typeof species !== 'undefined' && species && species.length > 0) { %>
        <% species.forEach(function(s) { %>
          <div class= "col-12 col-sm-6 col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow">
              <img src="<%= s.image %>" class="card-img-top" alt="<%= s.commonName %>" style="height: 250px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= s.commonName %></h5>
                <p class="card-text text-muted small"><em><%= s.scientificName %></em></p>
                <% 
                  let badgeClass = 'bg-secondary';
                  const status = s.statusLabel.toLowerCase();
                  if (status.includes('critically')) badgeClass = 'bg-danger';
                  else if (status.includes('endangered')) badgeClass = 'bg-warning';
                  else if (status.includes('vulnerable')) badgeClass = 'bg-info';
                  else if (status.includes('near threatened')) badgeClass = 'bg-secondary';
                  else if (status.includes('least concern')) badgeClass = 'bg-success';
                %>
                <p class="card-text"><span class="badge <%= badgeClass %>"><%= s.statusLabel %></span></p>
                <a href="/especie/<%= encodeURIComponent(s.scientificName) %>" class="btn btn-primary mt-auto">See more</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-warning text-center" role="alert">
            <h4>No species found</h4>
            <p>No species match the selected filter. Try selecting a different conservation status.</p>
            <a href="/catalog" class="btn btn-primary">View All Species</a>
          </div>
        </div>
      <% } %>
    </div>
    
    <!-- Pagination controls -->
    <% if (typeof pagination !== 'undefined') { %>
      <div class="d-flex justify-content-center my-4">
        <% const prevPage = pagination.page - 1; %>
        <% const nextPage = pagination.page + 1; %>
        <% 
          const params = [];
          if (pagination.limit && parseInt(pagination.limit) !== 15) {
            params.push(`limit=${parseInt(pagination.limit)}`);
          }
          if (pagination.status) {
            params.push(`status=${encodeURIComponent(pagination.status)}`);
          }
          const suffix = params.length > 0 ? `?${params.join('&')}` : '';
        %>
        <div class="btn-group" role="group">
          <a class="btn btn-outline-primary <%= pagination.page <= 1 ? 'disabled' : '' %>" href="/catalog/page/<%= Math.max(1, prevPage) %><%= suffix %>">Previous</a>
          <button type="button" class="btn btn-light" disabled>Page <%= pagination.page %> of <%= pagination.totalPages %></button>
          <a class="btn btn-outline-primary <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>" href="/catalog/page/<%= Math.min(pagination.totalPages, nextPage) %><%= suffix %>">Next</a>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
